<?xml version="1.0" encoding="UTF-8"?>

<screen require-authentication="false"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd">

    <transition name="createPerson" require-session-token="false" require-authentication="anonymous-all">
    <log message="******************** Transition hit ********************"/>
        <service-call name="Service.create#Person" in-map="context" out-map="context"/>
        <default-response url="."/>
    </transition>

    <actions>
    </actions>

    <pre-actions>
        <set field="head_title" value="Contact Us"/>
        <set field="menu_active" value="Contact Us"/>
    </pre-actions>

    <widgets>
        <render-mode><text type="html,vuet" location="component://ContactUs/template/contact.html"/></render-mode>
        <form-single name="createPerson" transition="createPerson" method="POST">
            <field name="firstName">
                <default-field>
                    <text-line size="30"/>
                </default-field>
            </field>
            <field name="lastName">
                <default-field>
                    <text-line size="30"/>
                </default-field>
            </field>
            <field name="emailAddress">
                <default-field>
                    <text-line size="30"/>
                </default-field>
            </field>
            <field name="contactNumber">
                <default-field>
                    <text-line size="30"/>
                </default-field>
            </field>
            <field name="requestName">
                <default-field title="Subject">
                    <text-line size="30"/>
                </default-field>
            </field>
            <field name="description">
                <default-field>
                    <text-line size="30"/>
                </default-field>
            </field>
            <field name="submitButton">
                <default-field title="Submit">
                    <submit/>
                </default-field>
            </field>
        </form-single>
        <render-mode><text type="html,vuet" location="component://ContactUs/screen/Contact/html/contact.html"/></render-mode> 
    </widgets>
</screen>